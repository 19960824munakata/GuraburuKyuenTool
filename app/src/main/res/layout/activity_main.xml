<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kure.guraburu_kyuen_tool.MainActivity"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/reliefButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:text="救援" />

            <Button
                android:id="@+id/officialTwitterButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:text="公式\nTwitter" />

            <Button
                android:id="@+id/officialPageButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="公式\nホームページ" />
            android:textSize="20sp"

            <Button
                android:id="@+id/wikiButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="wiki" />

            <Button
                android:id="@+id/settingButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="設定" />
        </LinearLayout>




    </HorizontalScrollView>




    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pager"/>


</LinearLayout>
